<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="libro_auxiliar_template_pdf">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 style="text-align: center;">Libro Auxiliar</h2>

                    <p>
                        <strong>Rango de fechas:</strong>
                        <t t-esc="docs.date_from"/> a <t t-esc="docs.date_to"/>
                    </p>

                    <t t-set="current_group" t-value="None"/>
                    <table class="table table-sm" style="font-size: 10px; width: 100%;">
                        <thead>
                            <tr>
                                <th style="width: 15%;">Fecha</th>
                                <th style="width: 40%;">Concepto</th>
                                <th style="width: 10%; text-align: right;">Debe</th>
                                <th style="width: 10%; text-align: right;">Haber</th>
                                <th style="width: 25%; text-align: right;">Saldo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="saldo" t-value="0"/>
                            <t t-foreach="rows" t-as="r">
                                <t t-if="r['type'] == 'group'">
                                    <tr>
                                        <td colspan="5"><strong><t t-esc="r['code']"/> - <t t-esc="r['name']"/></strong></td>
                                    </tr>
                                </t>
                                <t t-if="r['type'] == 'detail'">
                                    <tr>
                                        <td colspan="4"><strong><t t-esc="r['code']"/> - <t t-esc="r['name']"/></strong></td>
                                        <td style="text-align: right;"><t t-esc="r['initial_balance']"/></td>
                                    </tr>
                                    <t t-set="saldo" t-value="r['initial_balance']"/>
                                </t>
                                <t t-if="r['type'] == 'move'">
                                    <t t-set="saldo" t-value="saldo + r['debit'] - r['credit']"/>
                                    <tr>
                                        <td><t t-esc="r['date']"/></td>
                                        <td><t t-esc="r['label']"/></td>
                                        <td style="text-align: right;"><t t-esc="r['debit']"/></td>
                                        <td style="text-align: right;"><t t-esc="r['credit']"/></td>
                                        <td style="text-align: right;"><t t-esc="saldo"/></td>
                                    </tr>
                                </t>
                                <t t-if="r['type'] == 'total'">
                                    <tr>
                                        <td colspan="2" style="text-align: right;"><strong>Totales Cuenta</strong></td>
                                        <td style="text-align: right;"><strong t-esc="r['total_debit']"/></td>
                                        <td style="text-align: right;"><strong t-esc="r['total_credit']"/></td>
                                        <td style="text-align: right;"><strong t-esc="r['final_balance']"/></td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div style="margin-top: 20px; text-align: right;">
                        <strong>Total General:</strong><br/>
                        <span>Debe: <t t-esc="total_debit_general"/> | Haber: <t t-esc="total_credit_general"/></span>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
