<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista del Wizard para generar el Libro Diario Mayor -->
        <record id="view_libro_diario_mayor_report_wizard" model="ir.ui.view">
            <field name="name">libro.diario.mayor.report.wizard.form</field>
            <field name="model">libro.diario.mayor.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Generar Libro Diario Mayor">
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="export_format"/>
                    </group>
                    <footer>
                        <button string="Generar Reporte" type="object" name="action_generate_mayor_report" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>